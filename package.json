{
  "name": "xfuel-protocol",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings 5",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "wait-on http://localhost:3000 && cypress open",
    "cypress:open": "wait-on http://localhost:3000 && cypress open",
    "test:e2e:headless": "wait-on http://localhost:3000 && cypress run",
    "test:contracts": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:theta-testnet": "hardhat run scripts/deploy.cjs --network theta-testnet",
    "check-balance": "hardhat run scripts/check-balance.cjs --network theta-testnet",
    "health": "node server/health.js",
    "dev:backend": "node server/health.js",
    "dev:web": "npm run dev",
    "dev:mobile": "cd edgefarm-mobile && npm run start",
    "build:web": "npm run build",
    "extract-logos": "ts-node --esm scripts/extract-logos.ts",
    "extract-logo-bubble": "ts-node --esm scripts/extract-logo-bubble.ts",
    "extract-logo-simple": "ts-node --esm scripts/extract-logo-simple.ts",
    "extract-xf-logo": "ts-node --esm scripts/extract-xf-logo.ts",
    "generate-favicons": "ts-node --esm scripts/generate-favicons.ts",
    "eas:update:preview": "cd edgefarm-mobile && npx eas-cli update --branch preview --message \"Investor demo\"",
    "test:performance": "ts-node --esm scripts/test-performance.ts",
    "perf:monitor": "echo \"Performance monitoring enabled in dev mode. Check console for metrics.\"",
    "setup:theta-wallet": "node -e \"console.log('Run ./setup-theta-wallet.sh (Linux/Mac) or setup-theta-wallet.bat (Windows)')\"",
    "test:wallet": "jest --testPathPattern=walletConnect",
    "test:wallet:e2e": "cypress run --spec 'cypress/e2e/theta-wallet-qr.cy.ts'"
  },
  "dependencies": {
    "@cosmjs/stargate": "^0.37.0",
